DJANGO_SECRET_KEY=dev-secret-key-change-me
DJANGO_DEBUG=1
# Comma-separated hosts. settings.py always adds localhost/127.0.0.1/0.0.0.0 + LAN_IP.
# In docker-compose, backend_tls overrides this via its own `environment:` block.
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# LAN IP for dev access from mobile / other machines.
# Set via:  export LAN_IP=$(ipconfig getifaddr en0)  (macOS)
# Or:       export LAN_IP=$(hostname -I | awk '{print $1}')  (Linux)
# Leave empty if only accessing from localhost.
LAN_IP=

DB_NAME=signchat
DB_USER=signchat
DB_PASSWORD=signchat
DB_HOST=postgres
DB_PORT=5432

REDIS_HOST=redis
REDIS_PORT=6379

